@model List<Message>
@{
    ViewData["Title"] = "Fantasy Football Form";
    Layout = "~/Views/Shared/_FFForm.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div>
        <div class="panel-body"> <h2> Forms</h2></div>
        <div>
            <table class="table table-sm table-bordered">
                <tr><th>ID</th><th>Name</th><th>Email</th></tr>
                @if (Model.Count() == 0)
                {
                    <tr><td colspan="3" class="text-center">No Messages </td></tr>
                }
                else
                {
                    foreach (Message message in Model)
                    {
                        <tr>
                            <td>@message.Messenger</td>
                            <td>@message.MessageText.</td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@message.MessageID" method="post">
                                    <a class="btn btn-sm btn-primary" asp-action="Edit"
                                       asp-route-id="@message.MessageID">Edit</a>
                                    <button type="submit"
                                            class="btn btn-sm btn-danger">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </table>

            <br />
            <a class="nav-link" asp-controller="Message" asp-action="FormMessage">Submit a Message to the Form</a>
        </div>
    </div>
    
</body>