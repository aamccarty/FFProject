@model FFProject.Models.Roster
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PlayerAdd</title>
</head>
<body>
    <div>
    <form class="p-a-1" asp-action="FormMessage" method="post">
        <div asp-validation-summary="ModelOnly" style="background-color: red"></div>
        <div class="form-group">
            <label asp-for="PlayerName"> Your Player Name</label>
            <div><span asp-validation-for="PlayerName"> </span></div>
            <input class="form-control" asp-for="PlayerName" />
        </div>

        <div class="form-group">
            <label asp-for="PlayerPosition">What is his Position?</label>
            <div><span asp-validation-for="PlayerPosition"></span></div>
            <input class="form-control" asp-for="PlayerPosition" />
        </div>
        <div class="form-group">
            <label asp-for="PlayerValue">What Value do you give the player (1-10)</label>
            <div><span asp-validation-for="PlayerValue"></span></div>
            <input class="form-control" asp-for="PlayerValue" />
        </div>

        <button class="btn btn-primary" type="submit">Submit</button>

    </form>
    </div>
</body>
</html>
